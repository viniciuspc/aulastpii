<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>br.com.fiap.servlet.ServletLogin</servlet-class>
        <init-param>
            <param-name>Login</param-name>
            <param-value/>
        </init-param>
        <init-param>
            <param-name>Senha</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ServletMenu</servlet-name>
        <servlet-class>br.com.fiap.servlet.ServletMenu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMenu</servlet-name>
        <url-pattern>/ServletMenu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
